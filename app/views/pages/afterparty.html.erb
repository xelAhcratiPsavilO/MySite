<!DOCTYPE html>
<html class="afterparty" lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>afterparty</title>
  </head>
  <body>
    <div class="content" id="row1">
      <div class="center">
        <img src="images/ibiza.png" class="circle">
        <br>
        <br>
        <h1><%= t('.trip') %></h1>
        <p>
          Ibiza
          <br>
          <%= t('.islands') %>
          <br>
          <a href="https://goo.gl/maps/USAqXQVrXQvpDCb48" target="_blank"><%= t('.map') %></a>
          <br>
          <br>
          <%= t('.trip_content') %>
      </div>
    </div>
    <div class="content" id="row2">
      <br>
      <br>
      <br>
      <br>
      <div class="box" onsubmit="confirmSubmission()">
        <h2><%= t('.joining') %></h2>
          <%= form_for :afterparty, url: afterparty_path do |f| %>
          <div class="inputBox">
            <%= f.text_field :name, :required => true%>
            <label><%= t('.name') %></label>
          </div>
          <div class="inputBox">
            <%= f.text_field :number, :required => true%>
            <label><%= t('.number') %></label>
          </div>
          <div class="inputBox">
            <%= f.text_field :days, :required => true%><br>
            <label><%= t('.days') %></label>
          </div>
          <div class="inputBox">
          <select-label><%= t('.comment') %></select-label>
            <%= f.text_area :comment, :required => false%><br><br>
          </div>
          <br>
          <%= f.submit t('.submit') %>
          <div class="inputBox">
          <br>
          <select-label><%= t('.thanks') %></select-label>
          <br>
          <select-label><%= t('.message') %></select-label>
          </div>
          <% end %>
      </div>
      <script>
        function confirmSubmission() {
          alert("The form was submitted");
        }
      </script>
    </div>
  </body>
</html>
